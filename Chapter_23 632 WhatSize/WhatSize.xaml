<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Name="grid">
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <!-- StackPanel ориентирована горизонтально и содержит 4 элемента TextBlock, образующих одну строку текста.-->
        <TextBlock Text="{Binding ElementName=grid, Path=ActualWidth}" />
        <TextBlock Text=" &#x00D7; " />
        <TextBlock Text="{Binding ElementName=grid, Path=ActualHeight}" />
        <!--Два элемента TextBlock определяют привязки к свойствам ActualWidth и ActualHeight объекта Grid.-->
        <TextBlock Text=" device independent units" />
    </StackPanel>
</Grid>
